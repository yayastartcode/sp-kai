<section class="py-8">
    <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Manajemen Berita</h1>
            <a href="/admin/news/create" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700">
                <i class="fas fa-plus mr-2"></i>Tambah Berita
            </a>
        </div>
        
        <!-- News Table -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">Gambar</th>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">Judul</th>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">Status</th>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">Views</th>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">Tanggal</th>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">Aksi</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y">
                        <% if (news.length === 0) { %>
                            <tr>
                                <td colspan="6" class="px-4 py-8 text-center text-gray-500">Belum ada berita</td>
                            </tr>
                        <% } else { %>
                            <% news.forEach(item => { %>
                                <tr class="hover:bg-gray-50">
                                    <td class="px-4 py-3">
                                        <div class="w-16 h-12 bg-gray-200 rounded overflow-hidden">
                                            <% if (item.image) { %>
                                                <img src="<%= item.image %>" alt="" class="w-full h-full object-cover">
                                            <% } %>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3">
                                        <a href="/berita/<%= item.slug %>" target="_blank" class="font-medium hover:text-purple-600">
                                            <%= item.title %>
                                        </a>
                                    </td>
                                    <td class="px-4 py-3">
                                        <% if (item.is_published) { %>
                                            <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs">Published</span>
                                        <% } else { %>
                                            <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded text-xs">Draft</span>
                                        <% } %>
                                    </td>
                                    <td class="px-4 py-3 text-sm text-gray-600"><%= item.views %></td>
                                    <td class="px-4 py-3 text-sm text-gray-600">
                                        <%= new Date(item.created_at).toLocaleDateString('id-ID') %>
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="flex gap-2">
                                            <a href="/admin/news/<%= item.id %>/edit" class="text-blue-600 hover:underline text-sm">Edit</a>
                                            <form action="/admin/news/<%= item.id %>/toggle-publish" method="POST" class="inline">
                                                <button type="submit" class="text-yellow-600 hover:underline text-sm">
                                                    <%= item.is_published ? 'Unpublish' : 'Publish' %>
                                                </button>
                                            </form>
                                            <form action="/admin/news/<%= item.id %>/delete" method="POST" class="inline" onsubmit="return confirm('Hapus berita ini?')">
                                                <button type="submit" class="text-red-600 hover:underline text-sm">Hapus</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="mt-6">
            <a href="/admin/dashboard" class="text-purple-600 hover:underline">
                <i class="fas fa-arrow-left mr-2"></i>Kembali ke Dashboard
            </a>
        </div>
    </div>
</section>
