<section class="py-8">
    <div class="max-w-6xl mx-auto px-4">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">Admin Dashboard</h1>

        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">Total Member</p>
                        <p class="text-3xl font-bold text-gray-800">
                            <%= stats.totalMembers %>
                        </p>
                    </div>
                    <i class="fas fa-users text-3xl text-purple-500"></i>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">Pending</p>
                        <p class="text-3xl font-bold text-yellow-600">
                            <%= stats.pendingMembers %>
                        </p>
                    </div>
                    <i class="fas fa-clock text-3xl text-yellow-500"></i>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">Berita</p>
                        <p class="text-3xl font-bold text-gray-800">
                            <%= stats.totalNews %>
                        </p>
                    </div>
                    <i class="fas fa-newspaper text-3xl text-blue-500"></i>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">Galeri</p>
                        <p class="text-3xl font-bold text-gray-800">
                            <%= stats.totalGallery %>
                        </p>
                    </div>
                    <i class="fas fa-images text-3xl text-green-500"></i>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="grid md:grid-cols-5 gap-4 mb-8">
            <a href="/admin/members?status=pending"
                class="bg-yellow-500 text-white rounded-lg p-4 text-center hover:bg-yellow-600 transition">
                <i class="fas fa-user-clock mr-2"></i>Verifikasi Member
            </a>
            <a href="/admin/hero-slides"
                class="bg-purple-500 text-white rounded-lg p-4 text-center hover:bg-purple-600 transition">
                <i class="fas fa-sliders-h mr-2"></i>Hero Slider
            </a>
            <a href="/admin/news"
                class="bg-blue-500 text-white rounded-lg p-4 text-center hover:bg-blue-600 transition">
                <i class="fas fa-newspaper mr-2"></i>Berita
            </a>
            <a href="/admin/gallery"
                class="bg-green-500 text-white rounded-lg p-4 text-center hover:bg-green-600 transition">
                <i class="fas fa-images mr-2"></i>Kelola Galeri
            </a>
            <a href="/admin/settings"
                class="bg-gray-500 text-white rounded-lg p-4 text-center hover:bg-gray-600 transition">
                <i class="fas fa-cog mr-2"></i>Pengaturan
            </a>
        </div>

        <!-- Recent Members -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold text-gray-800">Member Terbaru</h2>
                <a href="/admin/members" class="text-purple-600 hover:underline">Lihat Semua</a>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">Nama</th>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">No. HP</th>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">Status</th>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">Tanggal</th>
                            <th class="px-4 py-3 text-sm font-medium text-gray-600">Aksi</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y">
                        <% recentMembers.forEach(member=> { %>
                            <tr>
                                <td class="px-4 py-3">
                                    <%= member.name %>
                                </td>
                                <td class="px-4 py-3">
                                    <%= member.phone %>
                                </td>
                                <td class="px-4 py-3">
                                    <% if (member.status==='approved' ) { %>
                                        <span
                                            class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs">Approved</span>
                                        <% } else if (member.status==='pending' ) { %>
                                            <span
                                                class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-xs">Pending</span>
                                            <% } else { %>
                                                <span
                                                    class="bg-red-100 text-red-800 px-2 py-1 rounded text-xs">Rejected</span>
                                                <% } %>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-600">
                                    <%= new Date(member.created_at).toLocaleDateString('id-ID') %>
                                </td>
                                <td class="px-4 py-3">
                                    <a href="/admin/members/<%= member.id %>"
                                        class="text-purple-600 hover:underline">Detail</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>