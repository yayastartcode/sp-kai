<!-- Gallery Detail Page -->
<section class="py-12">
    <div class="max-w-6xl mx-auto px-4">
        <!-- Breadcrumb -->
        <nav class="mb-8">
            <ol class="flex items-center space-x-2 text-sm text-gray-500">
                <li><a href="/" class="hover:text-purple-600">Beranda</a></li>
                <li><i class="fas fa-chevron-right text-xs"></i></li>
                <li><a href="/galeri" class="hover:text-purple-600">Galeri</a></li>
                <li><i class="fas fa-chevron-right text-xs"></i></li>
                <li class="text-gray-800 font-medium">
                    <%= item.title %>
                </li>
            </ol>
        </nav>

        <!-- Main Content -->
        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Image & Description -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                    <!-- Main Image -->
                    <div class="relative">
                        <img src="<%= item.image %>" alt="<%= item.title %>"
                            class="w-full h-auto max-h-[600px] object-contain bg-gray-100">
                        <button onclick="openFullscreen('<%= item.image %>')"
                            class="absolute top-4 right-4 bg-black bg-opacity-50 text-white px-3 py-2 rounded-lg hover:bg-opacity-70 transition">
                            <i class="fas fa-expand mr-2"></i>Lihat Penuh
                        </button>
                    </div>

                    <!-- Info -->
                    <div class="p-6">
                        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-4">
                            <%= item.title %>
                        </h1>

                        <% if (item.description) { %>
                            <div class="prose max-w-none text-gray-600 leading-relaxed">
                                <%- item.description %>
                            </div>
                            <% } else { %>
                                <p class="text-gray-500 italic">Tidak ada deskripsi untuk foto ini.</p>
                                <% } %>

                                    <div class="mt-6 pt-6 border-t border-gray-200 flex items-center justify-between">
                                        <div class="text-sm text-gray-500">
                                            <i class="fas fa-calendar mr-2"></i>
                                            Ditambahkan: <%= new Date(item.created_at).toLocaleDateString('id-ID', {
                                                day: 'numeric' , month: 'long' , year: 'numeric' }) %>
                                        </div>
                                        <div class="flex gap-3">
                                            <a href="<%= item.image %>" download
                                                class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition text-sm">
                                                <i class="fas fa-download mr-2"></i>Download
                                            </a>
                                            <a href="/galeri"
                                                class="border border-gray-300 text-gray-600 px-4 py-2 rounded-lg hover:bg-gray-50 transition text-sm">
                                                <i class="fas fa-arrow-left mr-2"></i>Kembali
                                            </a>
                                        </div>
                                    </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar: Related Gallery -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow-lg p-6 sticky top-4">
                    <h3 class="text-lg font-bold text-gray-800 mb-4">
                        <i class="fas fa-images mr-2 text-purple-600"></i>Galeri Lainnya
                    </h3>

                    <% if (related && related.length> 0) { %>
                        <div class="grid grid-cols-2 gap-3">
                            <% related.forEach(rel=> { %>
                                <a href="/galeri/<%= rel.slug || rel.id %>"
                                    class="relative group overflow-hidden rounded-lg">
                                    <img src="<%= rel.image %>" alt="<%= rel.title %>"
                                        class="w-full h-24 object-cover group-hover:scale-110 transition duration-300">
                                    <div
                                        class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
                                        <i class="fas fa-eye text-white"></i>
                                    </div>
                                </a>
                                <% }) %>
                        </div>
                        <a href="/galeri" class="block text-center text-purple-600 font-semibold mt-4 hover:underline">
                            Lihat Semua Galeri <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                        <% } else { %>
                            <p class="text-gray-500 text-center py-4">Tidak ada galeri lainnya.</p>
                            <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Fullscreen Modal -->
<div id="fullscreenModal" class="fixed inset-0 bg-black bg-opacity-95 z-50 hidden items-center justify-center">
    <button onclick="closeFullscreen()" class="absolute top-4 right-4 text-white text-3xl hover:text-gray-300 z-10">
        <i class="fas fa-times"></i>
    </button>
    <img id="fullscreenImage" src="" alt="" class="max-w-full max-h-full object-contain p-4">
</div>

<script>
    function openFullscreen(src) {
        document.getElementById('fullscreenImage').src = src;
        document.getElementById('fullscreenModal').classList.remove('hidden');
        document.getElementById('fullscreenModal').classList.add('flex');
        document.body.style.overflow = 'hidden';
    }

    function closeFullscreen() {
        document.getElementById('fullscreenModal').classList.add('hidden');
        document.getElementById('fullscreenModal').classList.remove('flex');
        document.body.style.overflow = 'auto';
    }

    document.getElementById('fullscreenModal').addEventListener('click', function (e) {
        if (e.target === this) closeFullscreen();
    });

    document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape') closeFullscreen();
    });
</script>