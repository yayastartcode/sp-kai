<!-- Hero Banner -->
<section class="bg-gradient-to-r from-purple-600 to-purple-800 text-white py-16">
    <div class="max-w-6xl mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-4">Tentang Kami</h1>
        <p class="text-xl text-purple-100">Memahami misi dan visi organisasi kami</p>
    </div>
</section>

<!-- Main Content -->
<section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
        <!-- About Section -->
        <div class="grid md:grid-cols-2 gap-12 items-center mb-16">
            <div>
                <h2 class="text-4xl font-bold mb-6 text-gray-800">
                    <%= settings.about_title || 'Tentang Kami' %>
                </h2>
                <p class="text-lg text-gray-600 leading-relaxed mb-6">
                    <%= settings.about_content || 'Deskripsi tentang organisasi Anda.' %>
                </p>
                <div class="flex gap-4">
                    <div class="flex-1">
                        <div class="text-3xl font-bold text-purple-600 mb-2">
                            <%= totalMembers %>
                        </div>
                        <p class="text-gray-600">Anggota Aktif</p>
                        <p class="text-sm text-gray-600 mt-1">per <%= new Date().toLocaleDateString('id-ID', {
                                day: 'numeric' , month: 'long' , year: 'numeric' }) %>
                        </p>
                    </div>
                    <div class="flex-1">
                        <div class="text-3xl font-bold text-purple-600 mb-2">5+</div>
                        <p class="text-gray-600">Tahun Berjalan</p>
                    </div>
                </div>
            </div>
            <div class="rounded-lg overflow-hidden shadow-xl h-96">
                <% if (settings.about_image && settings.about_image !=='/images/about.jpg' ) { %>
                    <img src="<%= settings.about_image %>" alt="About" class="w-full h-full object-cover">
                    <% } else { %>
                        <div
                            class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                            <i class="fas fa-building text-8xl text-gray-400"></i>
                        </div>
                        <% } %>
            </div>
        </div>

        <!-- Vision & Mission -->
        <div class="mb-16">
            <h3 class="text-3xl font-bold text-center mb-12 text-gray-800">Visi & Misi Kami</h3>
            <div class="grid md:grid-cols-2 gap-8">
                <!-- Vision -->
                <div
                    class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-8 shadow-lg border-l-4 border-blue-600">
                    <div class="flex items-center mb-6">
                        <div
                            class="w-14 h-14 bg-blue-600 rounded-full flex items-center justify-center text-white mr-4">
                            <i class="fas fa-eye text-2xl"></i>
                        </div>
                        <h4 class="text-2xl font-bold text-gray-800">Visi</h4>
                    </div>
                    <p class="text-gray-700 leading-relaxed text-lg">
                        <%= settings.vision
                            || 'Visi organisasi kami adalah membangun masa depan yang lebih baik untuk semua anggota.'
                            %>
                    </p>
                </div>

                <!-- Mission -->
                <div
                    class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-xl p-8 shadow-lg border-l-4 border-orange-600">
                    <div class="flex items-center mb-6">
                        <div
                            class="w-14 h-14 bg-orange-600 rounded-full flex items-center justify-center text-white mr-4">
                            <i class="fas fa-target text-2xl"></i>
                        </div>
                        <h4 class="text-2xl font-bold text-gray-800">Misi</h4>
                    </div>
                    <p class="text-gray-700 leading-relaxed text-lg">
                        <%- settings.mission
                            || 'Misi kami adalah melayani anggota dengan sebaik-baiknya melalui berbagai program dan kegiatan yang bermanfaat.'
                            %>
                    </p>
                </div>
            </div>
        </div>

        <!-- Call to Action -->
        <div class="bg-gradient-to-r from-purple-600 to-purple-800 rounded-xl p-8 text-center text-white">
            <h3 class="text-2xl font-bold mb-4">Bergabunglah dengan Kami</h3>
            <p class="mb-6 text-purple-100">Jadilah bagian dari komunitas yang kuat dan saling mendukung</p>
            <a href="/"
                class="bg-white text-purple-600 font-semibold px-8 py-3 rounded-lg hover:bg-purple-50 transition inline-block">
                <i class="fas fa-arrow-right mr-2"></i>Kembali ke Beranda
            </a>
        </div>
    </div>
</section>