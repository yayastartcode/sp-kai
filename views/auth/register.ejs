<section class="py-12">
    <div class="max-w-md mx-auto px-4">
        <div class="bg-white rounded-lg shadow-md p-8">
            <h1 class="text-2xl font-bold text-center text-gray-800 mb-8">Daftar Member</h1>

            <form action="/register" method="POST" enctype="multipart/form-data">
                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-2">Nama Lengkap *</label>
                    <input type="text" name="name" required
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                        placeholder="Nama lengkap Anda">
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-2">NIPP *</label>
                    <input type="text" name="nipp" required
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                        placeholder="Nomor Induk Pegawai Perusahaan">
                    <p class="text-sm text-gray-500 mt-1">Digunakan untuk login</p>
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-2">Nomor HP</label>
                    <input type="tel" name="phone"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                        placeholder="08xxxxxxxxxx">
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-2">Asal Kantor</label>
                    <input type="text" name="asal"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                        placeholder="Nama kantor/unit kerja">
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-2">Alamat</label>
                    <textarea name="address" rows="2"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                        placeholder="Alamat lengkap"></textarea>
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-2">NIAS (Nomor Induk Anggota Serikat)</label>
                    <input type="text" name="nias"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                        placeholder="Opsional - dapat diisi nanti">
                    <p class="text-sm text-gray-500 mt-1">Jika sudah memiliki NIAS, silakan isi di sini</p>
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-2">Foto</label>
                    <input type="file" name="photo" accept="image/*"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
                    <p class="text-sm text-gray-500 mt-1">Max 5MB. Format: jpg, png, gif</p>
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-2">Password *</label>
                    <input type="password" name="password" required minlength="6"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                        placeholder="Minimal 6 karakter">
                </div>

                <div class="mb-6">
                    <label class="block text-gray-700 font-medium mb-2">Konfirmasi Password *</label>
                    <input type="password" name="password_confirm" required minlength="6"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                        placeholder="Ulangi password">
                </div>

                <button type="submit"
                    class="w-full bg-orange-600 text-white py-3 rounded-lg font-semibold hover:bg-orange-700 transition">
                    Daftar
                </button>
            </form>

            <p class="text-center text-gray-600 mt-6">
                Sudah punya akun?
                <a href="/login" class="text-orange-600 font-semibold hover:underline">Login</a>
            </p>
        </div>
    </div>
</section>