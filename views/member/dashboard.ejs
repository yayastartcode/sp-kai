<section class="py-12">
    <div class="max-w-4xl mx-auto px-4">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">Dashboard Member</h1>

        <!-- Status Card -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <div class="w-16 h-16 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden">
                        <% if (member.photo) { %>
                            <img src="<%= member.photo %>" alt="Photo" class="w-full h-full object-cover">
                            <% } else { %>
                                <i class="fas fa-user text-2xl text-gray-400"></i>
                                <% } %>
                    </div>
                    <div class="ml-4">
                        <h2 class="text-xl font-semibold text-gray-800">
                            <%= member.name %>
                        </h2>
                        <p class="text-gray-600">
                            NIPP: <%= member.nipp || '-' %>
                        </p>
                        <% if (member.asal) { %>
                            <p class="text-gray-500 text-sm">
                                <i class="fas fa-building mr-1"></i>
                                <%= member.asal %>
                            </p>
                            <% } %>
                    </div>
                </div>

                <div class="text-right">
                    <% if (member.status==='approved' ) { %>
                        <span class="bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-medium">
                            <i class="fas fa-check-circle mr-1"></i> Terverifikasi
                        </span>
                        <% if (member.nias) { %>
                            <p class="text-purple-600 font-medium mt-2">NIAS: <%= member.nias %>
                            </p>
                            <% } %>
                                <% if (member.member_id) { %>
                                    <p class="text-gray-600 mt-1 text-sm">Member ID: <%= member.member_id %>
                                    </p>
                                    <% } %>
                                        <% } else if (member.status==='pending' ) { %>
                                            <span
                                                class="bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full text-sm font-medium">
                                                <i class="fas fa-clock mr-1"></i> Menunggu Verifikasi
                                            </span>
                                            <% if (member.nias) { %>
                                                <p class="text-purple-600 font-medium mt-2">NIAS: <%= member.nias %>
                                                </p>
                                                <% } %>
                                                    <% } else { %>
                                                        <span
                                                            class="bg-red-100 text-red-800 px-4 py-2 rounded-full text-sm font-medium">
                                                            <i class="fas fa-times-circle mr-1"></i> Ditolak
                                                        </span>
                                                        <% } %>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="grid md:grid-cols-3 gap-6">
            <a href="/member/profile" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
                <i class="fas fa-user-edit text-3xl text-purple-600 mb-4"></i>
                <h3 class="font-semibold text-gray-800">Edit Profil</h3>
                <p class="text-gray-600 text-sm mt-2">Perbarui data diri Anda</p>
            </a>

            <% if (member.status==='approved' ) { %>
                <a href="/member/card" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
                    <i class="fas fa-id-card text-3xl text-purple-600 mb-4"></i>
                    <h3 class="font-semibold text-gray-800">Kartu Anggota</h3>
                    <p class="text-gray-600 text-sm mt-2">Lihat & unduh kartu anggota</p>
                </a>
                <% } else { %>
                    <div class="bg-gray-100 rounded-lg p-6 opacity-60">
                        <i class="fas fa-id-card text-3xl text-gray-400 mb-4"></i>
                        <h3 class="font-semibold text-gray-600">Kartu Anggota</h3>
                        <p class="text-gray-500 text-sm mt-2">Tersedia setelah diverifikasi</p>
                    </div>
                    <% } %>

                        <a href="/logout" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
                            <i class="fas fa-sign-out-alt text-3xl text-red-500 mb-4"></i>
                            <h3 class="font-semibold text-gray-800">Logout</h3>
                            <p class="text-gray-600 text-sm mt-2">Keluar dari akun</p>
                        </a>
        </div>

        <!-- Info Box -->
        <% if (member.status==='pending' ) { %>
            <div class="mt-8 bg-yellow-50 border border-yellow-200 rounded-lg p-6">
                <h3 class="font-semibold text-yellow-800 mb-2">
                    <i class="fas fa-info-circle mr-2"></i>Pendaftaran Sedang Diproses
                </h3>
                <p class="text-yellow-700">
                    Pendaftaran Anda sedang dalam proses verifikasi oleh admin.
                    Silakan tunggu hingga akun Anda disetujui untuk mendapatkan kartu anggota.
                </p>
            </div>
            <% } %>
    </div>
</section>